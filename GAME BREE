  <script>
    function scrollToId(id){
      document.getElementById(id).scrollIntoView({behavior:'smooth', block:'start'});
    }

    function showExample(type){
      const pos = document.getElementById('examplePositive');
      const neg = document.getElementById('exampleNegative');
      if(type==='positive'){
        pos.innerHTML = "<strong>Contoh:</strong> Pemain membuat mod (modification) dalam game sandbox untuk membangun kota unik — lalu menerapkan konsep desain itu ke proyek model fisik atau presentasi desain urban.";
        neg.innerHTML = "Klik <em>Contoh Negatif</em> untuk lihat risiko.";
      } else {
        neg.innerHTML = "<strong>Contoh:</strong> Seseorang yang menghabiskan waktu berjam-jam untuk grind (aktivitas berulang) di game kompetitif sampai lupa tugas sekolah, sehingga waktu belajar & eksplorasi kreatif lain berkurang.";
        pos.innerHTML = "Klik <em>Contoh Positif</em> untuk lihat manfaat.";
      }
    }

    function clearExample(){
      document.getElementById('examplePositive').innerText = "Klik tombol \"Contoh Positif\" di samping untuk melihat contoh aplikasi game dalam kreativitas.";
      document.getElementById('exampleNegative').innerText = "Klik tombol \"Contoh Negatif\" di samping untuk melihat contoh dampak buruk bila tidak diatur.";
    }
  </script>
